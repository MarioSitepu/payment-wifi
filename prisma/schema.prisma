generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String   // Hashed password
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  bills     Bill[]
  payments  Payment[]
  
  @@map("users")
}

model Bill {
  id          String   @id @default(cuid())
  userId      String
  month       Int      // 1-12
  year        Int      // 2024, 2025, etc.
  amount      Int      // Total amount for the month (default 67000)
  isPaid      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  payments    Payment[]
  
  @@unique([userId, month, year])
  @@map("bills")
}

model Payment {
  id          String        @id @default(cuid())
  billId      String
  userId      String
  amount      Int           // Amount paid in this payment
  type        PaymentType   @default(FULL)
  status      PaymentStatus @default(PENDING)
  receiptUrl  String?       // URL to uploaded receipt image
  notes       String?       // Admin notes for rejection/approval
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  bill        Bill          @relation(fields: [billId], references: [id], onDelete: Cascade)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("payments")
}

model SystemSettings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("system_settings")
}

enum Role {
  ADMIN
  MEMBER
}

enum PaymentType {
  FULL
  INSTALLMENT_1
  INSTALLMENT_2
}

enum PaymentStatus {
  PENDING
  APPROVED
  REJECTED
}